        <vector>
            <path android:name="v" android:pathData="..."/>
        </vector>
    </aapt:attr>
    <target android:name="v">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator android:propertyName="translateY" android:duration="100" android:startOffset="100" android:valueFrom="0" android:valueTo="1" android:valueType="floatType"/>
